<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Wishlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Your Wishlist</h2>
    <div id="flash-message" style="display:none;"></div>
    <div id="wishlist-content"></div>
    <script>
      function renderWishlist() {
        let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
        let html = '';
        if (wishlist.length === 0) {
          html = '<div class="text-center p-5"><i class="fas fa-heart-broken fa-3x text-muted mb-3"></i><h4 class="text-muted">Your wishlist is empty.</h4></div>';
        } else {
          html += '<div class="row">';
          wishlist.forEach(item => {
            html += `
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title text-primary">${item.name}</h5>
                    <p class="card-text text-success fw-bold fs-5">$${item.price}</p>
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                      <button class="btn btn-outline-danger btn-sm me-2" onclick="removeFromWishlist(${item.id})"><i class='fas fa-trash'></i> Remove</button>
                      <button class="btn btn-success btn-sm" onclick="addToCartFromWishlist(${item.id})"><i class='fas fa-cart-plus'></i> Add to Cart</button>
                    </div>
                  </div>
                </div>
              </div>
            `;
          });
          html += '</div>';
        }
        document.getElementById('wishlist-content').innerHTML = html;
      }
      function showFlashMessage(msg, type = 'success') {
        const flash = document.getElementById('flash-message');
        flash.textContent = msg;
        flash.className = `alert alert-${type}`;
        flash.style.display = 'block';
        setTimeout(() => { flash.style.display = 'none'; }, 2000);
      }
      function removeFromWishlist(id) {
        let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
        wishlist = wishlist.filter(item => item.id !== id);
        localStorage.setItem('wishlist', JSON.stringify(wishlist));
        renderWishlist();
        if (typeof updateCartWishlistCounts === 'function') updateCartWishlistCounts();
        showFlashMessage('Removed from wishlist', 'warning');
      }
      function addToCartFromWishlist(id) {
        let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const item = wishlist.find(i => i.id === id);
        if (!item) return;
        const idx = cart.findIndex(c => c.id === id);
        if (idx > -1) {
          cart[idx].qty += 1;
        } else {
          cart.push({ ...item, qty: 1 });
        }
        localStorage.setItem('cart', JSON.stringify(cart));
        if (typeof updateCartWishlistCounts === 'function') updateCartWishlistCounts();
        showFlashMessage('Added to cart!', 'success');
      }
      document.addEventListener('DOMContentLoaded', renderWishlist);
    </script>
    <div class="d-flex justify-content-between mt-4">
      <a href="/master" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Back to Shopping</a>
      <a href="/cart" class="btn btn-primary"><i class="fas fa-shopping-cart me-1"></i> Go to Cart</a>
    </div>
    <style>
      .card-title { font-weight: 600; }
      .card { border-radius: 15px; box-shadow: 0 4px 24px rgba(118,75,162,0.08); }
      .btn-success { background: linear-gradient(45deg, #667eea, #764ba2); border: none; }
      .btn-success:hover { background: linear-gradient(45deg, #764ba2, #667eea); }
      .btn-outline-danger { border-radius: 20px; }
      .btn-sm { border-radius: 20px; padding: 5px 16px; }
    </style>
    </script>
  </div>
</body>
</html>
